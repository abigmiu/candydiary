{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "pinia-plugin-persist"
        ]
    },
    "include": [
        "env.d.ts",
        "src/**/*.ts",
        "src/**/*.vue",
    ],
}